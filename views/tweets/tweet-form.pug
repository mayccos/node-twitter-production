extends ../layout

block content 
    div(class="d-flex flex-row content b1 mx-auto")
        div(class="w-100")
            form(class='card' method="post" action= tweet._id ? "/tweets/update/" + tweet._id : "/tweets") 
                div(class="card-header") Ecrire un tweet
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content" placeholder="What is happening")= tweet && tweet.content
                        if errors
                            ul(class="my-2") 
                                each error in errors
                                    li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")