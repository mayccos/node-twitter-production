script(src="/javascripts/profile.js")
div(class="profile-container bg-white mr-3 d-flex flex-column") 
    form(id="form-container" class="d-flex flex-row justify-content-center align-items-center" action="/users/update/image" method="post" enctype="multipart/form-data")
        input(type="file" name="avatar" class="d-none" id="input-avatar")
        img(src=user.avatar class="img-fluid pointer-cursor" id="image-profile")
    div(class="d-flex flex-row justify-content-center align-items-center my-3")
        p= `${ user.username} (${user.local.email})`
    div(class="text-center d-flex flex-row justify-content-center align-items-center my-3")
        div(class="w-50")
            p
                strong Tweet
                br
                span(class="text-primary")= tweets && tweets.length ? tweets.length : "-"
        div(class="w-50")
            p
                strong Following
                br
                span(class="text-primary") -